
# MPI C++ compiler
CXX 		= mpiicc  -fPIC
CC		= $(CXX)

# Passed to compiler
OPT_LEVEL	= -O0
DEBUG_LEVEL	= -g -std=c++0x -pthread 
#DEBUG_LEVEL	= -g -pthread 
EXTRA_CCFLAGS	= -Wall
CXXFLAGS	= $(OPT_LEVEL) $(DEBUG_LEVEL) $(EXTRA_CCFLAGS)  -I/g/g90/sato5/opt/include/ -I./ -I../src -I../src/encoder
CCFLAGS		= $(CXXFLAGS) 

# Passed to the C pre-processor
CPPFLAGS        = -I./ -I../src -I../src/encoder
CFLAGS		= $(CPPFLAGS)

# Passed to the linker
LDFLAGS         = -L./ -lstdc++  -L/g/g90/sato5/opt/lib -lpnmpi -lz

# Link with these libraries
LDLIBS          =

# Installation path
prefix		= ./lib

